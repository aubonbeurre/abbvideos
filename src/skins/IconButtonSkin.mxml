<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" >
	
	<fx:Metadata>
		[HostComponent("skins.IconButton")] 
	</fx:Metadata>
	
	<s:states> 
		<s:State name="up" /> 
		<s:State name="over" /> 
		<s:State name="down" /> 
		<s:State name="disabled" /> 
	</s:states>  
	
	<s:Rect 
		bottom="0"
		left="0"
		right="0"
		top="0"
		alpha="0.5"
		alpha.over="0.8"
		radiusX="2"
		radiusY="2"
		>
		<s:fill>
			<s:SolidColor 
				color="0x000000"
				/>
		</s:fill>
	</s:Rect>
	
	<!-- icon -->
	<s:BitmapImage horizontalCenter="0" verticalCenter="0" source="{hostComponent.getStyle('icon')}" />
	
</s:SparkSkin>
