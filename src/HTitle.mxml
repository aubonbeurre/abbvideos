		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" verticalAlign="middle" >

<fx:Script>
	<![CDATA[
	[Bindable]
	public var title:String;
	[Bindable]
	public var content:String;

	]]>
